[colors]

bg = #282a36
fg = #f8f8f2
select = #44475a
blue = #6272a4
cyan = #8be9fd
pink = #ff79c6
purple = #bd93f9
green = #50fa7b
orange = #ffb86c
red = #ff5555
yellow = #f1fa8c

;++++++++++++++++++++++

background = ${colors.bg}
background-alt = ${colors.select}
foreground = ${colors.fg}
foreground-alt = ${colors.select}
primary = ${colors.purple}
secondary = ${colors.cyan}
alert =  ${colors.pink}

[bar/example]
width = 100%
height = 28
radius = 0.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2

border-left-size = 0
border-top-size = 0
border-right-size = 0
border-bottom-size = 0
border-color = #00000000

padding-left = 0
padding-right = 0

module-margin-left = 2
module-margin-right = 2

font-0 = FontAwesome:size=11; 2
font-1 = UbuntuMono-R:size=12; 2
# some font awesome icons need more vertical offset
font-2 = FontAwesome:size=11; 3

modules-left = i3 audacious
modules-center = eth netstats
modules-right =  weather memory cpu uptime date powermenu

[module/audacious]
type = custom/script
interval = 1
exec-if = pgrep audacious
exec = $HOME/dotfiles/.config/polybar/audacious.sh
click-left = audtool playback-pause
label = %output%
format = <label>
format-padding = 5

[module/weather]
type = custom/script
interval = 1800
exec = $HOME/dotfiles/.config/polybar/weather.py
label = %output%
format = <label>
format-underline = ${colors.pink}
click-left = xdg-open $HOME/dotfiles/.config/polybar/weather-current.txt

[module/netstats]
type = custom/script
interval = 1
exec = $HOME/dotfiles/.config/polybar/ipstats.sh
format = <label>
format-padding = 1
format-underline = ${colors.green}
; %{T3} tells the bar to use font 3 and %{T-} resets it to default
label = %{T3}%{T-} %output%
click-left = wireshark -i enp3s0 -k

[module/uptime]
type = custom/script
interval = 30
exec = $HOME/dotfiles/.config/polybar/uptime.sh
label = %output%
format = <label>
format-padding = 1
format-underline = ${colors.cyan}

[module/public_ip]
type = custom/script
interval = 3600
exec = $HOME/dotfiles/.config/polybar/public_ip.py
label = %output%
format = <label>
format-padding = 1
format-underline = ${colors.green}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
strip-wsnumbers = true

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-background = ${colors.background-alt}
label-focused-underline = ${colors.primary}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-underline = ${colors.select}
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

;urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

[module/cpu]
type = internal/cpu
interval = 2
format = <label>
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.purple}
label = CPU  %percentage%%
label-padding = 1

[module/memory]
type = internal/memory
interval = 2
format = <label>
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.purple}
label = RAM  %percentage_used%%
label-padding = 1

[module/eth]
type = internal/network
interface = enp3s0
label-connected = %downspeed%
label-disconnected = not connected
label-disconnected-foreground = ${colors.red}
label-connected-padding = 1
format = <label>
format-connected-underline = ${colors.green}
format-connected-prefix = ""
format-connected-prefix-foreground = ${colors.foreground}
format-disconnected = <label-disconnected>

[module/date]
type = internal/date
interval = 5

# date = %a %b %d
date = %a %d
time = %I:%M %p

; if `date-alt` or `time-alt` is defined, clicking
; the module will toggle between formats
date-alt = %Y-%m-%d
time-alt = %H:%M:%S

format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.cyan}

label = %date%, %time%
label-padding = 1

# [module/volume]
# type = internal/volume

# format-volume = <ramp-volume> <label-volume>
# label-volume = %percentage%
# label-muted =  00
# label-muted-foreground = ${colors.orange}

# ramp-volume-0 = 
